{
    "name": "vue-helper",
    "displayName": "Vue Helper",
    "version": "0.0.1",
    "description": "provide some useful tools for vue project",
    "publisher": "YuTengjing",
    "preview": true,
    "author": {
        "name": "YuTengjing",
        "url": "https://github.com/tjx666",
        "email": "ytj2713151713@gmail.com"
    },
    "license": "SEE LICENSE IN LICENSE",
    "homepage": "https://github.com/tjx666/vue-helper/blob/master/README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/tjx666/vue-helper"
    },
    "bugs": {
        "url": "https://github.com/tjx666/vue-helper/issues",
        "email": "ytj2713151713@gmail.com"
    },
    "keywords": [
        "vue",
        "vue2",
        "intellisense",
        "definition"
    ],
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "icon": "assets/logo.png",
    "engines": {
        "vscode": "^1.73.1"
    },
    "badges": [
        {
            "url": "https://img.shields.io/badge/PRs-welcome-brightgreen.svg",
            "description": "PRs Welcome",
            "href": "https://github.com/tjx666/vue-helper"
        }
    ],
    "activationEvents": [
        "onLanguage:vue"
    ],
    "contributes": {
        "configuration": {
            "title": "Vue Helper",
            "properties": {
                "vueHelper.moduleDefinition.enable": {
                    "title": "enable js module definition in vue file(need reload vscode)",
                    "type": "boolean",
                    "default": false
                }
            }
        }
    },
    "eslintConfig": {
        "extends": "@yutengjing/eslint-config-typescript"
    },
    "scripts": {
        "vscode:prepublish": "pnpm esbuild:base --minify",
        "preinstall": "npx only-allow pnpm",
        "clear": "rimraf ./out",
        "esbuild:base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "esbuild:watch": "pnpm esbuild:base --sourcemap --watch",
        "compile:test": "pnpm clear && tsc -p ./test/tsconfig.json",
        "lint": "eslint src --ext ts",
        "test": "pnpm compile:test && node ./out/test/runTests.js",
        "package": "vsce package --no-dependencies",
        "publish": "vsce publish --no-dependencies"
    },
    "devDependencies": {
        "@types/glob": "^8.0.0",
        "@types/mocha": "^10.0.0",
        "@types/node": "16.18.3",
        "@types/resolve": "^1.20.2",
        "@types/vscode": "^1.73.1",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "@vscode/test-electron": "^2.2.0",
        "@yutengjing/eslint-config-typescript": "^0.0.4",
        "@yutengjing/prettier-config": "^0.0.1",
        "esbuild": "^0.15.14",
        "eslint": "^8.27.0",
        "format-imports": "^3.1.2",
        "glob": "^8.0.3",
        "mocha": "^10.1.0",
        "prettier": "^2.7.1",
        "resolve": "^1.22.1",
        "rimraf": "^3.0.2",
        "typescript": "^4.9.3",
        "vsce": "^2.14.0"
    }
}
